# ---------------------------------------------------------------------------
# Epstein Bench environment example
# Copy this file to `.env` and customize values for your setup.
# ---------------------------------------------------------------------------

# Hugging Face access token (needed for gated GPT-OSS models or dataset pulls)
HUGGINGFACE_TOKEN=

# Embedding model configuration
EMBEDDINGS_MODEL_NAME=sentence-transformers/all-mpnet-base-v2
EMBEDDINGS_DEVICE=

# Tagging backend: "openai" (default) or "local"
TAGGING_BACKEND=openai

# Common tagging parameters
TAGGING_MODEL_NAME=gpt-4o-mini
TAGGING_MAX_OUTPUT_TOKENS=512
TAGGING_TEMPERATURE=0.2
TAGGING_DEVICE=

# OpenAI API key (required when TAGGING_BACKEND=openai and for benchmark generation)
OPENAI_API_KEY=

# Local GPT-OSS settings (used when TAGGING_BACKEND=local)
# TAGGING_MODEL_NAME=openai/gpt-oss-20b
# TAGGING_DEVICE=cuda

# Default device fallback when nothing else is specified (e.g., "cuda", "mps", "cpu")
DEFAULT_DEVICE=

